{
  "name": "csharp-stretch",
  "displayName": "C# Stretch",
  "description": "Simple VSCode extension to improve c# experience",
  "publisher": "jacokok",
  "repository": {
    "type": "git",
    "url": "https://github.com/jacokok/csharp-stretch"
  },
  "icon": "assets/logo.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "C#",
    "CSharp",
    "Namespace",
    "Autocompletion",
    "Autocomplete",
    "IntelliSense",
    ".NET",
    ".NET Core"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onCommand:csharpstretch.createClass",
    "onCommand:csharpstretch.fixNamespace"
  ],
  "contributes": {
    "submenus": [
      {
        "id": "csharpstretch.newItem",
        "label": "New C# File"
      }
    ],
    "menus": {
      "csharpstretch.newItem": [
        {
          "command": "csharpstretch.createClass"
        }
      ],
      "explorer/context": [
        {
          "submenu": "csharpstretch.newItem",
          "when": "explorerResourceIsFolder && csharpstretch.showMenu"
        }
      ],
      "commandPalette": [
        {
          "command": "csharpstretch.createClass",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "csharpstretch.createClass",
        "title": "Class"
      },
      {
        "command": "csharpstretch.fixNamespace",
        "title": "Fix Namespace"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.3",
    "vscode": "^1.1.37"
  }
}
